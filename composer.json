
{"name": "clinica_medica/app",
"description": "Clinica Medica",
"type": "project",
"license": "MIT",
"require": {
    "php": "^8.2",
    "defuse/php-encryption": "^2.4",
    "dompdf/dompdf": "^3.1",
    "ezyang/htmlpurifier": "^4.15",
    "flightphp/active-record": "^0.6.0",
    "flightphp/core": "^3.13",
    "ifsnop/mysqldump-php": "^2.12",
    "monolog/monolog": "^3.0",
    "phpmailer/phpmailer": "^6.9",
    "respect/validation": "^2.4",
    "stripe/stripe-php": "^17.6",
    "vlucas/phpdotenv": "^5.5"
},
"autoload": {
    "psr-4": {
        "App\\": "App/"
    }
},
"autoload-dev": {
    "psr-4": {
        "Tests\\": "tests/"
    }
},
"require-dev": {
    "phpunit/phpunit": "^11.5"
},
"config": {
    "optimize-autoloader": true,
    "sort-packages": true
},
"scripts": {
    "test": "phpunit",
    "test:unit": "phpunit --testsuite=Unit",
    "test:feature": "phpunit --testsuite=Feature",
    "test:coverage": "phpunit --coverage-html tests/coverage/html",
    "test:coverage-text": "phpunit --coverage-text"
}
}